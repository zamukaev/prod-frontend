{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ],
        "paths": {
            "*": [
                "./src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        }
    },
    "include": [
        "./config/jest/setupTest.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
}